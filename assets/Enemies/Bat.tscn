script/source = "extends KinematicBody2D

var knockback = Vector2.ZERO

onready var stats = $Stats
onready var timer = $Timer
onready var anim = $AnimatedSprite
onready var tween = $Tween

func _ready():
	print(stats.max_health)

func _physics_process(delta):
	knockback = knockback.move_toward(Vector2.ZERO, 200 * delta) # knockback friction
	knockback = move_and_slide(knockback)

func _on_Hurtbox_area_entered(area):
	stats.health -= 1
	knockback = area.knockback_vector * 120 # knockback velocity

func _on_Stats_no_health():
	anim.playing = false
	
	tween.interpolate_property(anim,
	\"modulate\",
	Color(1, 1, 1, 1),
	Color(1, 0, 0, 0),
	.5,
	Tween.TRANS_LINEAR,
	Tween.EASE_OUT
	)
	tween.interpolate_property($ShadowSprite,
	\"modulate\",
	Color(1, 1, 1, 1),
	Color(1, 1, 1, 0),
	.5,
	Tween.TRANS_LINEAR,
	Tween.EASE_OUT
	)
	tween.start()
	timer.start()
	yield(timer, \"timeout\")
	queue_free()
"

