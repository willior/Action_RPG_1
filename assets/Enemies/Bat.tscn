script/source = "extends KinematicBody2D

const EnemyDeathEffect = preload(\"res://assets/Effects/EnemyDeathEffect.tscn\")

export var ACCELERATION = 300
export var MAX_SPEED = 50
export var FRICTION = 200

enum {
	IDLE,
	WANDER,
	CHASE
}

var velocity = Vector2.ZERO
var knockback = Vector2.ZERO

var state = IDLE

onready var stats = $Stats
onready var timer = $Timer
onready var sprite = $AnimatedSprite
onready var tween = $Tween
onready var hurtbox = $Hurtbox
onready var playerDetectionZone = $PlayerDetectionZone

func _ready():
	sprite.frame = 0
	sprite.speed_scale = 1

func _physics_process(delta):
	knockback = knockback.move_toward(Vector2.ZERO, FRICTION * delta) # knockback friction
	knockback = move_and_slide(knockback)
	
	match state:
		IDLE:
			velocity = velocity.move_toward(Vector2.ZERO, FRICTION * delta)
			seek_player()
		WANDER:
			pass
		CHASE:
			var player = playerDetectionZone.player
			if player != null:
				var direction = (player.global_position - global_position).normalized() # gets the distance between player and bat, then normalizes it so that it's a length of 1
				velocity = velocity.move_toward(direction * MAX_SPEED, ACCELERATION * delta) # multiplies that by the MAX_SPEED value
			else:
				sprite.speed_scale = 1
				state = IDLE
				
	sprite.flip_h = velocity.x < 0
	velocity = move_and_slide(velocity)
			
func seek_player():
	if playerDetectionZone.can_see_player():
		sprite.speed_scale = 2
		state = CHASE

func _on_Hurtbox_area_entered(area):
	stats.health -= area.damage # does damage equal to the variable exported by the sword hitbox's script
	knockback = area.knockback_vector * 140 # knockback velocity
	hurtbox.create_hit_effect()

func _on_Stats_no_health():
	sprite.playing = false # stop animation
	hurtbox.set_deferred(\"monitoring\", false) # turn off hurtbox
	
	tween.interpolate_property(sprite,
	\"offset:y\",
	-12,
	0,
	0.5,
	Tween.TRANS_QUART,
	Tween.EASE_IN
	)
	
	tween.interpolate_property(sprite,
	\"modulate\",
	Color(1, 1, 1, 1),
	Color(1, 0, 0, 1),
	0.5,
	Tween.TRANS_LINEAR,
	Tween.EASE_IN
	)
	tween.start()
	
	timer.start()
	yield(timer, \"timeout\")
	
	var enemyDeathEffect = EnemyDeathEffect.instance()
	get_parent().add_child(enemyDeathEffect)
	enemyDeathEffect.global_position = global_position
	
	queue_free()
"

